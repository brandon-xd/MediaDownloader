<Window x:Name="Media_Downloader" x:Class="MediaDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaDownloader"
        mc:Ignorable="d"
        Title="Media Downloader" Height="427" Width="550" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Canvas x:Name="backbox" Margin="0,-19,0,-19">
        <TextBlock Text="Paste the link of a video/playlist here:" TextWrapping="Wrap" x:Name="UserPrompt" HorizontalAlignment="Left" Canvas.Left="40" Canvas.Top="34" VerticalAlignment="Top" Height="17" Width="203"/>
        <Button Width="100" x:Name="DLButton" Height="21" Content="Download" Click="DLButton_Click" HorizontalAlignment="Left" Canvas.Left="409" Canvas.Top="56" VerticalAlignment="Top"/>
        <Image Width="350" Stretch="Uniform" Source="/placeholder.png" x:Name="PreviewThumbnail" Height="205" HorizontalAlignment="Left" Canvas.Left="35" Canvas.Top="108" VerticalAlignment="Top"/>
        <ProgressBar
Width="412" x:Name="DownloadBar" Maximum="1" Height="27" Foreground="Red" HorizontalAlignment="Left" Canvas.Left="67" Canvas.Top="373" VerticalAlignment="Top"/>
        <Label x:Name="AlertMessage" HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Foreground="Red" Canvas.Left="67" Canvas.Top="338" Width="412" FontSize="14" Height="30"/>
        <ComboBox
Width="88" SelectionChanged="VidFormat_SelectionChanged" x:Name="VidFormat" Cursor="Hand" HorizontalAlignment="Left" Canvas.Left="415" Canvas.Top="141" VerticalAlignment="Top" Height="23">
            <ComboBoxItem
Content="Best"/>
            <ComboBoxItem
Content="webm"/>
            <ComboBoxItem
Content="mp4"/>
            <ComboBoxItem
Content="mov"/>
        </ComboBox>
        <ComboBox
Width="88" SelectionChanged="AudioFormat_SelectionChanged" x:Name="AudioFormat" IsEnabled="False" Cursor="Hand" HorizontalAlignment="Left" Canvas.Left="418" Canvas.Top="242" VerticalAlignment="Top" Height="23">
            <ComboBoxItem
Content="Best"/>
            <ComboBoxItem
Content="m4a"/>
            <ComboBoxItem
Content="mp3"/>
            <ComboBoxItem
Content="wav"/>
            <ComboBoxItem
Content="flac"/>
        </ComboBox>
        <Button
Width="100" x:Name="ChangeDirectory" Content="Change Directory" Click="ChangeDirectory_Click_1" HorizontalAlignment="Left" Canvas.Left="409" Canvas.Top="83" VerticalAlignment="Top" Height="21"/>
        <ComboBox
Width="88" SelectionChanged="VidQuality_SelectionChanged" x:Name="VidQuality" Cursor="Hand" HorizontalAlignment="Left" Canvas.Left="415" Canvas.Top="174" VerticalAlignment="Top" Height="23">
            <ComboBoxItem
Content="Best"/>
            <ComboBoxItem
Content="1440"/>
            <ComboBoxItem
Content="1080"/>
            <ComboBoxItem
Content="720"/>
            <ComboBoxItem
Content="480"/>
        </ComboBox>
        <Button
Width="100" x:Name="LightDarkMode" Content="Light/Dark" Click="LightDarkMode_Click" HorizontalAlignment="Left" Canvas.Left="412" Canvas.Top="284" VerticalAlignment="Top" Height="21"/>
        <TextBlock
Text="Save Location: " TextWrapping="Wrap" x:Name="YourDir" HorizontalAlignment="Left" Canvas.Left="40" Canvas.Top="85" VerticalAlignment="Top" Height="17" Width="81"/>
        <TextBlock
Width="278" Text="Directory" TextWrapping="Wrap" x:Name="UserDir" HorizontalAlignment="Left" Canvas.Left="126" Canvas.Top="85" VerticalAlignment="Top" Height="17"/>
        <TextBlock
Text="Video Options" TextWrapping="Wrap" RenderTransformOrigin="-0.162,-0.39" x:Name="VideoBlock" HorizontalAlignment="Left" Canvas.Left="419" Canvas.Top="120" VerticalAlignment="Top" Height="17" Width="79"/>
        <TextBox
Width="364" TextWrapping="Wrap" TextChanged="UserLink_TextChanged_1" x:Name="UserLink" Height="21" HorizontalAlignment="Left" Canvas.Left="40" Canvas.Top="56" VerticalAlignment="Top"/>
        <CheckBox
x:Name="Audio_Only_Checkbox" Content="Audio Only" Checked="AudioOnly_Checked" HorizontalAlignment="Left" Canvas.Left="418" Canvas.Top="216" VerticalAlignment="Top" Height="16" Width="82"/>




    </Canvas>
</Window>